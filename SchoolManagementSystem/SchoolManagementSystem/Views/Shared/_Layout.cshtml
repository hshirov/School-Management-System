<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - School Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["studentID"] == null && Session["teacherID"] == null)
    {
        @Html.Partial("_DefaultNavBar")
    }
    else if (Session["studentID"] != null)
    {
        @Html.Partial("_StudentNavBar")
    }
    else if (Session["teacherID"] != null)
    {
        @Html.Partial("_TeacherNavBar")
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - School Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>